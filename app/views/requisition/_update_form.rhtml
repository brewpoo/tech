<h4>Update Requisition <%= "#{@requisition.to_label}" %></h4>
<div id="form">
<% form_for :requisition, :url => { :action => 'update', :id => @requisition.id }, :html => { :method => 'put' } do |f| %>
  <%= render :partial => 'requisition_form', :locals => { :f => f } %>
<p><%= submit_tag "Save" %> or <%= link_to "Cancel", :action => :list %></p>
<% end %>
</div>

