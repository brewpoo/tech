<div class="note">
<% fields_for "order[note_attributes][]", note do |f| %>
  <p>
  <%= f.text_area :body, :index => nil, :rows => 10, :cols => 75 %>
  <% if note.new_record? %>
    <%= link_to_function image_tag('remove'), "remove_note(this)" %>
  <% else %>
    <%= link_to_function image_tag('remove'), "mark_note_destroyed(this)" %>
    <%= f.hidden_field :id, :index => nil %>
    <%= f.hidden_field :should_destroy, :index => nil, :class => 'should_destroy' %>
  <% end %>
  </p>
<% end %>
</div>

